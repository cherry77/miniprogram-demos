.home{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
/* 轮播部分 */
.banner-box{
  width: 100%;
  height: 500rpx;
  background: #333999;
  border-radius: 0 0 50rpx 50rpx;
  display: flex;
  justify-content: center;
}
.banner-radius{
  width: 95%;
}
swiper{
  width: 100%;
  height: 80%;
}
swiper-item{
  display: flex;
  justify-content: center;
}
swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
/* 菜单box部分 */
.list-new-box{
  height: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: center;
}
.list-new-bar{
  width: 95%;
  height: 100%;
  border-radius: 20rpx;
  margin-top: -100rpx;
  background: #fff;
  padding: 20rpx;
  
}
/* 公共部分 */
.menu-item{
  position: relative;
}
.menu-item .item-tip{
  position: absolute;
  top: 0;
  right: 0;
  width: 90rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background-size: cover;
  color: #fff;
  font-size: 20rpx;
}
.menu-item .item-title{
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
.menu-item .item-subtitle{
  font-size: 14rpx;
  color: #58635f;
}
/* 上部分 */
.menu{
  display: flex;
  height: 250rpx;
  margin-bottom: 10rpx;
}
.menu .menu-left{
  flex: 3;
  margin-right: 10rpx;
}
.menu .menu-left .menu-item{
  background-size: cover;
  height: 250rpx;
  padding: 80rpx 50rpx;
  box-sizing: border-box;
}
.menu .menu-right{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.menu .menu-right .menu-item{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #e4eeef;
}
.menu .menu-right .menu-item-bottom{
  background: #eaf0e4;
}
/* 下部分 */
.menu-more{
  display: flex;
  height: 250rpx;
}
.menu-more-left{
  width: 100%;
  height: 100%;
  margin-right: 10rpx;
}
.menu-more-left:last-child{
   margin-right: 0;
}
.menu-more-left .menu-item{
  width: 100%;
  height: 100%;
  background-size: cover;
  padding: 70rpx 30rpx;
  box-sizing: border-box;
}


