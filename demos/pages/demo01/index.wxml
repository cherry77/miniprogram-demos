<!--index.wxml-->
<view class="container">
  <image src="{{src}}"></image>
  <text>{{name}}</text>
  <button wx:if="{{showBtn}}" open-type="getUserInfo" bindgetuserinfo="getMyInfo">点击获取头像和昵称</button>
  <!-- open-type="getUserInfo" 表示激活获取微信用户信息功能 -->
  <!-- bindgetuserinfo="getMyInfo" 表示获得的数据将传递给自定义函数getMyInfo，可以自己取名字 -->
</view>
